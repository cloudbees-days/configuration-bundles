pipeline {
    agent any
    options {
        timeout(time: 10, unit: 'MINUTES')
    }

    stages {
        stage('Publish request for dev controller') {
            steps {
                publishEvent event:jsonEvent("""{
                    "action": "provision-dev-controller",
                    "username": '${env.GITHUB_USERNAME}'
                }"""), verbose: true
            }
        }
    }
}
